<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="bottom_navigation_style" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@drawable/nav_bar_selected_item</item>
        <item name="itemTextColor">@drawable/nav_bar_selected_item</item>
    </style>

    <style name="custom_button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/source_code_pro_medium</item>
    </style>

    <style name="true_false_button" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">@color/pastel_pink</item>
    </style>

    <style name="submit_button" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">@color/pastel_pink</item>
    </style>

    <style name="sorting_groups" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@color/pastel_pink</item>
        <item name="android:padding">5dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:elevation">15dp</item>
    </style>

    <style name="sorting_concepts" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="title_style">
        <item name="fontFamily">@font/source_code_pro_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="subtitle_style">
        <item name="fontFamily">@font/source_code_pro_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="paragraph_style">
        <item name="fontFamily">@font/source_code_pro_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="description_style">
        <item name="fontFamily">@font/source_code_pro_italic</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="password_text_field">
        <item name="android:textColorHint">@color/gray</item>
        <item name="shapeAppearance">@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox
        </item>
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">5dp</item>
        <item name="android:inputType">textPassword</item>
    </style>
</resources>