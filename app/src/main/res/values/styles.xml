<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="custom_button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/md_theme_onPrimary</item>
        <item name="android:fontFamily">@font/baloo</item>
    </style>

    <style name="sorting_button" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:textSize">25sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:backgroundTint">@color/md_theme_secondaryContainer</item>
        <item name="android:textColor">@color/md_theme_secondary_mediumContrast</item>
        <item name="android:orientation">vertical</item>
        <item name="android:elevation">50dp</item>
    </style>

    <style name="sorting_textView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:textSize">30sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/rounded_background_sorting</item>
        <item name="android:textColor">@color/md_theme_secondaryContainer</item>
    </style>

    <style name="verify_button" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:textColor">@color/md_theme_onPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">@color/md_theme_secondary_mediumContrast</item>
    </style>

    <style name="unable_verify_button" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:textColor">@color/md_theme_outline_mediumContrast</item>
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">@color/md_theme_outlineVariant_mediumContrast</item>
    </style>

    <style name="title_style">
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:textSize">22sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="subtitle_style">
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="paragraph_style">
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="password_text_field">
        <item name="android:textColorHint">@color/md_theme_outline</item>
        <item name="shapeAppearance">@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox
        </item>
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">5dp</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

</resources>