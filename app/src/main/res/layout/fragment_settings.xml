<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.feature.settings.fragment.SettingsFragment">

    <ImageView
        android:id="@+id/generalIcon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/generalText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/generalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="@string/general"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/generalIcon"
        app:layout_constraintTop_toTopOf="@+id/generalIcon" />

    <ImageView
        android:id="@+id/themeIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/dark_mode"
        app:layout_constraintStart_toStartOf="@+id/generalIcon"
        app:layout_constraintTop_toBottomOf="@+id/generalIcon" />

    <TextView
        android:id="@+id/themeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/theme"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/themeIcon"
        app:layout_constraintTop_toTopOf="@+id/themeIcon" />

    <Switch
        android:id="@+id/themeSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/themeText"
        app:layout_constraintTop_toTopOf="@+id/themeText"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <View
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#D3D3D3"
        app:layout_constraintTop_toBottomOf="@+id/themeIcon" />

    <ImageView
        android:id="@+id/accountIcon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/person_circle"
        app:layout_constraintStart_toStartOf="@+id/generalIcon"
        app:layout_constraintTop_toBottomOf="@+id/lineView" />

    <TextView
        android:id="@+id/accountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="@string/account"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/accountIcon"
        app:layout_constraintTop_toTopOf="@+id/accountIcon" />

    <ImageView
        android:id="@+id/logoutIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logout"
        app:layout_constraintStart_toStartOf="@+id/themeIcon"
        app:layout_constraintTop_toBottomOf="@+id/accountIcon" />

    <TextView
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/logout"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/logoutIcon"
        app:layout_constraintTop_toTopOf="@+id/logoutIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>