<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/question_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:strokeColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/answers_background"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/questionText"
            style="@style/paragraph_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="In an array with a capacity of 100 and a size of 50, what is the index of the last element?"
            android:textColor="@color/md_theme_onSecondaryFixed_mediumContrast"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/userAnswer"
            style="@style/paragraph_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Your answer: 49, 99"
            android:textColor="@color/md_theme_onSecondaryFixed_mediumContrast"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/correctness"
            style="@style/paragraph_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Correctness: Incorrect, correct answer(s): 49"
            android:textColor="@color/md_theme_onSecondaryFixed_mediumContrast"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/score"
            style="@style/paragraph_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Score: 0"
            android:textColor="@color/md_theme_onSecondaryFixed_mediumContrast"
            android:textSize="14sp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>