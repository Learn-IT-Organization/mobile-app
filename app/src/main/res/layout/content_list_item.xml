<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/course_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:strokeColor="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/purple_bg">

            <LinearLayout
                android:id="@+id/titleLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginStart="120dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/urlTextView"
                    style="@style/title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/md_theme_onSecondaryFixed_mediumContrast" />

                <TextView
                    android:id="@+id/descriptionTextView"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_height="40dp"
                    android:text="Description"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/md_theme_onSecondaryFixed_mediumContrast"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/titleLinearLayout"
                android:layout_marginStart="120dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/backToQuizButton"
                    style="@style/theory_back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:text="Back to quiz" />

                <Button
                    android:id="@+id/moreButton"
                    style="@style/theory_more_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="More" />
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/contentImageView"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/girl_with_code_snippet" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>