<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/purple_bg"
    app:cardElevation="0dp"
    app:strokeColor="@android:color/transparent">

    <TextView
        android:id="@+id/lessonTitleTextView"
        style="@style/subtitle_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="@string/title"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/buttonReadMore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonReadMore"
        style="@style/lesson_more_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:drawableLeft="@drawable/book_button"
        android:fontFamily="@font/baloo"
        android:text="@string/read_more"
        android:textSize="14dp"
        app:layout_constraintBaseline_toBaselineOf="@id/buttonQuiz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lessonTitleTextView" />

    <Button
        android:id="@+id/buttonQuiz"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_quiz"
        android:fontFamily="@font/baloo"
        android:text="@string/quiz"
        android:textSize="14dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonSeeResults"
        app:layout_constraintStart_toEndOf="@id/buttonReadMore"
        app:layout_constraintTop_toBottomOf="@id/lessonTitleTextView" />

    <Button
        android:id="@+id/buttonSeeResults"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:fontFamily="@font/baloo"
        android:text="@string/see_results_button"
        android:textSize="14dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/buttonQuiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonQuiz"
        app:layout_constraintTop_toBottomOf="@id/lessonTitleTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>